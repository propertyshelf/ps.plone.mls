<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="ps.plone.mls"
      tal:omit-tag=""
      tal:condition="view/available">
  <section class="development header"
      tal:define="title view/get_title|nothing;
                  slogan view/get_slogan|nothing;
                  logo view/get_logo|nothing;
                  location view/get_location;">
    <div class="development_logo"
        tal:condition="logo">
        <img
          tal:condition="logo"
          tal:attributes="src logo" />
    </div>
    <h1 class="development_title"
        tal:condition="title"
        tal:content='title'/>
    <h2 class="development_slogan"
        tal:condition="slogan"
        tal:content="slogan"/>
    <h3 class="development_location"
        tal:condition="location"
        tal:content="location"/>

  </section>
</html>