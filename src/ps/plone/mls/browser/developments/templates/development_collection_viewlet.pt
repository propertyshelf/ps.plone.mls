<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="ps.plone.mls"
      tal:omit-tag=""
      tal:condition="view/available | nothing"
      tal:define="items view/items | nothing;
                  batch view/batching | nothing;
                  results batch/sequence_length | nothing;">


  <section class="listing-summary"
           tal:define="page_url view/view_url | nothing;
                       b_size view/limit;
                       b_orphan python: 1;
                       b_start request/b_start | python: 0;">
    <tal:items tal:condition="items">
      <div metal:use-macro="context/batch_macros/macros/navigation" />
      <div class="tileItem visualIEFloatFix"
           tal:repeat="item batch">
        <h2 class="tileHeadline"><a href="" class="summary url"
            tal:attributes="href string:${page_url}${item/id/value}"><span
            tal:replace="item/title/value | nothing">[Item Title]</span></a></h2>

        <figure tal:define="image item/logo | nothing">
          <a href="" tal:attributes="href string:${page_url}${item/id/value};
                                     title item/title/value"><img src="" alt=""
                     tal:condition="image"
                     tal:attributes="src image/value" /><img
                     tal:condition="not:image" alt="" title=""
                     src="++resource++plone.mls.listing.images/no-image.png" /></a>
          <figcaption>
            <small><span tal:replace="item/title/value">[Caption]</span></small>
          </figcaption>
        </figure>

        <div class="visualClear"></div>
      </div>

      <div metal:use-macro="context/batch_macros/macros/navigation" />

    </tal:items>
  </section>

  <h2>Items:</h2>
  <div style="border: 1px solid #333; margin: 1em;" tal:repeat="item items">
    <h3 tal:content="item/title"></h3>
    <tal:pictures tal:define="pictures item/pictures | nothing" tal:condition="pictures">
      <tal:leadimage tal:define="lead python:pictures[0]">
        <img src="" tal:attributes="src python:lead.get(scale='preview')" />
      </tal:leadimage>
    </tal:pictures>
  </div>
</html>
