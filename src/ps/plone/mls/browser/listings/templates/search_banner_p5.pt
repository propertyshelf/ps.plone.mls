<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="ps.plone.mls"
      tal:omit-tag=""
      tal:condition="view/available | nothing"
      tal:define="image_url view/image_url">
  <div class="listingsearchbanner" style=""
      tal:attributes="style string: background-image: url(${image_url});">
    <div class="container">
      <p align="right" tal:define="url view/section_1/search_target_url | nothing"
          style="float: right; padding: 0.5em; font-weight: bold;"
          tal:condition="url"><a href=""
          tal:attributes="href url"
          i18n:translate="">Advanced Search</a></p>
      <div class="pat-autotoc autotabs" data-pat-autotoc="section:section;levels:header;">
        <section tal:define="form view/section_1 | nothing" tal:condition="form">
          <header><span tal:replace="view/config/section_1_title">[title]</span></header>
          <div tal:replace="structure form"></div>
        </section>
        <section tal:define="form view/section_2 | nothing" tal:condition="form">
          <header><span tal:replace="view/config/section_2_title">[title]</span></header>
          <div tal:replace="structure form"></div>
        </section>
        <section tal:define="form view/section_3 | nothing" tal:condition="form">
          <header><span tal:replace="view/config/section_3_title">[title]</span></header>
          <div tal:replace="structure form"></div>
        </section>
        <section tal:define="form view/section_4 | nothing" tal:condition="form">
          <header><span tal:replace="view/config/section_4_title">[title]</span></header>
          <div tal:replace="structure form"></div>
        </section>
      </div>
    </div>
  </div>
  <script type="text/javascript">
    jQuery(function(jq) {
      if(jq('.listingsearchbanner form').length > 0) {
        jq('.listingsearchbanner input').each(function() {
          var label = jq("label[for='" + jq(this).attr('id') + "']");
          this.placeholder = jq.trim(label.text());
        });

        jq('.listingsearchbanner label').each(function() {
          jq(this).hide();
        });

        // Change search button into to use search icon
        jq('.listingsearchbanner .formControls input').each(function() {
          jq(this).attr({
            src: '++resource++ps.plone.mls/icons/search-icon-1.png',
            type: 'image',
            alt: jq(this).attr('value'),
          });
          jq(this).removeAttr('value');
        });

        // Rearrange Search Button
        // Section 1
        var elem = jq('.listingsearchbanner #form-section_1 .formControls');
        if(elem.length > 0) {
          elem.appendTo('.listingsearchbanner #formfield-form-section_1-widgets-q');
        }

        // Section 2
        elem = jq('.listingsearchbanner #form-section_2 .formControls');
        if(elem.length > 0) {
          elem.appendTo('.listingsearchbanner #formfield-form-section_2-widgets-q');
        }

        // Section 3
        elem = jq('.listingsearchbanner #form-section_3 .formControls');
        if(elem.length > 0) {
          elem.appendTo('.listingsearchbanner #formfield-form-section_3-widgets-q');
        }

        // Section 4
        elem = jq('.listingsearchbanner #form-section_4 .formControls');
        if(elem.length > 0) {
          elem.appendTo('.listingsearchbanner #formfield-form-section_4-widgets-q');
        }
      }
    });
  </script>

</html>
